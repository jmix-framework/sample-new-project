<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="sample" id="1">
        <createTable tableName="SAMPLE_ORDER">
            <column name="ID" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NUM" type="varchar(255)"/>
            <column name="CUSTOMER_ID" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet author="sample" id="2">
        <addForeignKeyConstraint baseTableName="SAMPLE_ORDER" baseColumnNames="CUSTOMER_ID" constraintName="FK_SAMPLE_ORDER_CUSTOMER"
                                 referencedTableName="SAMPLE_CUSTOMER" referencedColumnNames="ID"/>
    </changeSet>


</databaseChangeLog>
